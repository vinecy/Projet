#include <stdio.h>
#define n 4
#ifndef COULEURS
#define COULEURS

#include <stdio.h>

#define clrscr() printf("\033[H\033[2J")

#endif

#define couleur(param) printf("\033[%sm",param)

	int niveau[n][n][n];
int creer_niveau(void)
{

	int i,j;
	for (i=0;i<n;i++)
	{
		for (j=0;j<n;j++)
		{
			niveau[i][j][n]=0;
		}
	}
	return(niveau[n][n][n]);
}

int remplir_niveau(int niveau[n][n][n])
{
	int compteur=0;
	while(compteur<10)
	{
		int i,j,couleur;
		for (j=0;j<n;j++)
		{
			for(i=0;i<n-j;i++)
			{
				scanf("%i",&couleur);
				niveau[i][j][n]=couleur;
			}
		}
		compteur=compteur+1;
	}
	return(niveau[n][n][n]);
}

void afficher_niveau(int niveau[n][n][n])
{
	printf("\n");
	int i,j;
	for (i=0; i<n; i++) {
        printf("\n");
           for(j=n-i; j>0; j--) {
            printf("%i ",niveau[i][j][n]);
            }
        }
        printf("\n");
} 



int main(void)
{
couleur("34");
printf("bleu!\n");
couleur("31");
printf("rouge!\n");
couleur("32");
printf("vert!\n");
couleur("0");
}
