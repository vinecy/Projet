#include <stdio.h>
#define n 4


	int niveau[n][n][n];
int creer_niveau(void)
{

	int i,j;
	for (i=0;i<n;i++)
	{
		for (j=0;j<n;j++)
		{
			niveau[i][j][n]=0;
		}
	}
	return(niveau[i][j][n]);
}
