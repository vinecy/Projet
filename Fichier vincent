	printf("affichage base\n");
	for(i=0;i<n;i++)
	{
		printf("\n");
		for(j=0;j<n-i;j++)
		{
			printf("%i||",niveau[i][j][n]);		////////affichage1
		}
	}
	printf("\n");
	printf("\n");
	///////////////////////////////////////
	printf("affichage miroir\n");
	for(i=0;i<n;i++)
	{
		printf("\n");
		for(j=0;j<n-i;j++)
		{
			printf("%i||",miroir[i][j][n]);		////////affichagemiroir
		}
	}
	printf("\n");
	printf("\n");
	///////////////////////////////////
