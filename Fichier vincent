int main(void)
{
	int i,j,couleur;
	niveau[n][n][n]=creer_niveau();
	///////////////////////////////////
	for (j=0;j<n;j++)
	{
		for(i=0;i<n-j;i++)
		{
			scanf("%i",&couleur);				/////////remplissage a la main
			niveau[j][i][n]=couleur;
		}
	}
